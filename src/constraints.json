{
  "email": {
    "email": {
      "message": "^E-mail address is invalid"
    },

    "presence": {
      "allowEmpty": false
    }
  },

  "password": {
    "length": {
      "minimum": 6
    },

    "presence": {
      "allowEmpty": false
    }
  },

  "passwordConfirmation": {
    "equality": "password",

    "length": {
      "minimum": 6
    },

    "presence": {
      "allowEmpty": false
    }
  }
}
